{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "rootDir": ".",
    "target": "es2017",
    "outDir": "build",
    "module": "commonjs",
    "sourceMap": true,
    "baseUrl": "./",
    "types": ["node"],
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "test/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
